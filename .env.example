# Server
PORT=3001
NODE_ENV=development

# PostgreSQL (Railway)
DATABASE_URL=postgresql://user:password@localhost:5432/imagia

# Redis (Railway)
REDIS_URL=redis://localhost:6379

# Clerk Auth
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# LLM Providers
ANTHROPIC_API_KEY=sk-ant-...
FIREWORKS_API_KEY=fw_...
OPENAI_API_KEY=sk-...

# GitHub OAuth
GITHUB_CLIENT_ID=...
GITHUB_CLIENT_SECRET=...

# Railway (for deploying user apps)
RAILWAY_API_TOKEN=...

# AWS (Phase 3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
S3_BUCKET_NAME=imagia-assets

# Sentry
SENTRY_DSN=...

# Cache TTL (seconds)
CACHE_TTL_LLM=2592000
CACHE_TTL_PROJECTS=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Encryption key for secrets (32-byte hex)
SECRETS_ENCRYPTION_KEY=...

# Social Media OAuth (Phase 5)
TWITTER_CLIENT_ID=...
TWITTER_CLIENT_SECRET=...
LINKEDIN_CLIENT_ID=...
LINKEDIN_CLIENT_SECRET=...
FACEBOOK_APP_ID=...
FACEBOOK_APP_SECRET=...
SOCIAL_OAUTH_CALLBACK_URL=http://localhost:3001/api/social/oauth/callback

# Log Level
LOG_LEVEL=info
